{% extends 'base1.html.twig' %}
{% block body %}
	<!DOCTYPE html>
	<html>
		<head>
			<meta charset="utf-8">
			<meta http-equiv="X-UA-Compatible" content="IE=edge">
			<title>Data table</title>
			<!-- Tell the browser to be responsive to screen width -->
			<meta
			name="viewport" content="width=device-width, initial-scale=1">

			<!-- Font Awesome -->
			<link
			rel="stylesheet" href="../../bundles/plugins/fontawesome-free/css/all.min.css">
			<!-- Ionicons -->
			<link
			rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
			<!-- DataTables -->
			<link rel="stylesheet" href="../../bundles/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
			<link
			rel="stylesheet" href="../../bundles/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
			<!-- Theme style -->
			<link
			rel="stylesheet" href="../../bundles/dist/css/adminlte.min.css">

			<!-- CSS Export Button -->
			<link
			rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.7.0/css/buttons.dataTables.min.css"/>

			<!-- Google Font: Source Sans Pro -->
			<link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
			<style>
				.buttons-excel {}
			</style>
		</head>
		<body
			class="sidebar-mini sidebar-closed sidebar-collapse control-sidebar-slide-open text-sm" style="height: auto;">

			<!-- Content Header (Page header) -->
			<section class="content-header">
				<div class="container-fluid">
					<div class="row mb-2">
						<div class="col-sm-6">
							<h1>Liste des fonctions</h1>
						</div>
						<div class="col-sm-6">
							<ol class="breadcrumb float-sm-right">
								<li class="breadcrumb-item">
									<a href="/admin/">Home</a>
								</li>
								<li class="breadcrumb-item active">DataTables</li>
							</ol>
						</div>
					</div>
				</div>
				<!-- /.container-fluid -->
			</section>

			<!-- /.card -->

			<div
				class="card">

				<!-- /.card-header -->


				<div class="card-body">

					<div class="row">
						<div class="col-sm-12">
							<div class="table-responsive">
								<a href="{{ path ('admin') }}"><img src="https://img.icons8.com/cute-clipart/31/fa314a/circled-left.png"/></a>


								<a href="{{ path ('participantfonction_new') }}"><img src="https://img.icons8.com/material-sharp/30/26e07f/plus--v2.png"/></a>

								<div class="card-body">
									<table id="example1" class="table table-bordered table-striped dataTable dtr-inline" role="grid" aria-describedby="example1_info">
										<thead>
											<tr role="row">
												<th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">Référence</th>
												<th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">Libellé</th>
												<th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending">Description</th>
												<th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending">Actions</th>

											</tr>
										</thead>
										<tbody>
											{% for participantfonction in participantfonctions %}
												<tr>
													<td>{{ participantfonction.fonctionreference }}</td>
													<td>{{ participantfonction.libelle }}</td>
													<td>{{ participantfonction.description }}</td>
													<td>

														<a href="{{ path('participantfonction_show', {'fonctionreference': participantfonction.fonctionreference}) }}">
															<img src="https://icon-library.net//images/show-icon-png/show-icon-png-22.jpg" width="30"/></a>
														<a href="{{ path('participantfonction_edit', {'fonctionreference': participantfonction.fonctionreference}) }}"><img src="https://img.icons8.com/dusk/22/26e07f/edit-property.png"/></a>
														<a href="{{ path('participantfonction_delete', {'fonctionreference': participantfonction.fonctionreference}) }}"><img src="https://img.icons8.com/material-rounded/22/fa314a/trash.png"/></a>
													</td>
												</tr>
											{% else %}
												<tr>
													<td colspan="4">no records found</td>
												</tr>
											{% endfor %}
										</tbody>

									</table>
								</div>
							</div>

							<!-- jQuery -->
							<script src="../../bundles/plugins/jquery/jquery.min.js"></script><!-- Bootstrap 4 --><script src="../../bundles/plugins/bootstrap/js/bootstrap.bundle.min.js"></script><!-- DataTables --><script src="../../bundles/plugins/datatables/jquery.dataTables.min.js"></script>
							<script src="../../bundles/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
							<script src="../../bundles/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
							<script src="../../bundles/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script><!-- AdminLTE App --><script src="../../bundles/dist/js/adminlte.min.js"></script><!-- AdminLTE for demo purposes --><script src="../../bundles/dist/js/demo.js"></script>
							<!-- page script -->

							<!-- js export -->
							<script src="https://cdn.datatables.net/buttons/1.7.0/js/dataTables.buttons.min.js"></script>
							<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
							<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
							<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
							<script src="https://cdn.datatables.net/buttons/1.7.0/js/buttons.html5.min.js"></script>


							<script>
								$(function () {
$("#example1").DataTable({
dom: 'Bfrtip',
reponsive: "true",
"autoWidth": false,
buttons: [
{
extend: 'excelHtml5',
text: ' <i class="fas fa-file-excel"></i> ',
titleAttr: 'Excel',
className: 'btn btn-success',
exportOptions: {
columns: [0, 1, 2]
}
}, {
extend: 'pdfHtml5',
text: ' <i class="fas fa-file-pdf"></i> ',
titleAttr: 'PDF',
className: 'btn btn-danger',
exportOptions: {
columns: [0, 1, 2]
}
},
]
});
$('#example2').DataTable({
"paging": true,
"lengthChange": false,
"searching": false,
"ordering": true,
"info": true,
"autoWidth": false,
"responsive": true
});
});
							</script>


						</body>
					</body>
				</html>
			{% endblock %}
